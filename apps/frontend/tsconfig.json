{
  "compilerOptions": {
    "jsx": "preserve",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "shared/*": [
        "../../packages/shared/*"
      ]
    },
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx", 
    "../../shared"
  ],
  "exclude": [
    "node_modules"
  ],
  "extends": "../../tsconfig.json"
}


